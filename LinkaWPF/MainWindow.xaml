<Window x:Class="LinkaWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tobii="clr-namespace:Tobii.Interaction.Wpf;assembly=Tobii.Interaction.Net"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:local="clr-namespace:LinkaWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Window.Resources>
        <Style TargetType="Button" x:Key="CardButton">
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="tobii:Behaviors.IsGazeAware" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Margin="1" tobii:Behaviors.HasGazeChanged="cardButton_HasGazeChanged" Tag="{Binding Title}"
                                
            tobii:Behaviors.IsGazeAware="True"
            tobii:Behaviors.IsActivatable="True"
            
            tobii:Behaviors.GazeAwareDelayTime="200"
            tobii:Behaviors.GazeAwareMode="Normal"
            tobii:Behaviors.IsTentativeFocusEnabled="True"
         
                                BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" RenderOptions.EdgeMode="Aliased">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition Height="20"/>
                                </Grid.RowDefinitions>
                                <Image gif:ImageBehavior.RepeatBehavior="Forever" gif:ImageBehavior.AnimatedSource="{Binding Source}"/>
                                <ContentPresenter HorizontalAlignment="Center" Content="{Binding Title}" Grid.Row="1"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="Red"/>
                    <!--<Setter Property="Background" Value="LightGray"/>-->
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
                <Trigger Property="tobii:Behaviors.HasGaze" Value="True" >
                    <Setter Property="Background" Value="Yellow"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid x:Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Text -->
        <TextBox x:Name="text" Grid.Row="0" Grid.ColumnSpan="3" FontSize="20">Test</TextBox>

        <!-- Buttons -->
        <Button x:Name="prevButton" Grid.Row="1" Grid.Column="0" Click="prevButton_Click">Prev</Button>
        <Button x:Name="nextButton" Grid.Row="1" Grid.Column="2" Click="nextButton_Click">Next</Button>

        <!-- Cards -->
        <Grid x:Name="gridCard" Grid.Row="2" Grid.Column="1">
            <Grid.RowDefinitions>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
            </Grid.ColumnDefinitions>
        </Grid>
    </Grid>
</Window>
