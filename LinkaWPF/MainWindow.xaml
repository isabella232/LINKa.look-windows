<Window x:Class="LinkaWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LinkaWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Grid x:Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Text -->
        <Grid Grid.Row="0" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="text" Grid.Column="0" FontSize="20" Margin="2">Test</TextBox>
            <Button Grid.Column="1" Margin="2" Click="Button_Click_1">Удалить слово</Button>
            <Button Grid.Column="2" Margin="2" Click="Button_Click">Очистить</Button>
            <Button Grid.Column="3" Margin="2" Click="Button_Click_2">Воспроизвести</Button>
        </Grid>

        <!-- Buttons -->
        <Button x:Name="prevButton" Grid.Row="1" Grid.Column="0" Click="prevButton_Click">Prev</Button>
        <Button x:Name="nextButton" Grid.Row="1" Grid.Column="2" Click="nextButton_Click">Next</Button>

        <!-- Cards -->
        <Grid x:Name="gridCard" Grid.Row="2" Grid.Column="1">
            <Grid.RowDefinitions/>
            <Grid.ColumnDefinitions/>
        </Grid>
    </Grid>
</Window>
