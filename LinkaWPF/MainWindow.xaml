<Window x:Class="LinkaWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LinkaWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800" Closed="Window_Closed">
    <Grid x:Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Text -->
        <Grid Grid.Row="0" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Margin="2" Click="removeLastWordButton_Click">Удалить слово</Button>
            <TextBox x:Name="text" Grid.Column="1" FontSize="20" Margin="2" IsReadOnly="True"></TextBox>
            <Button Grid.Column="2" Margin="2" Click="clearTextBoxButton_Click">Очистить</Button>
            <Button Grid.Column="3" Margin="2" Click="pronounceWordsButton_Click">Воспроизвести</Button>
        </Grid>

        <!-- Buttons -->
        <Button x:Name="prevButton" Grid.Row="1" Grid.Column="0" Click="prevButton_Click">Prev</Button>
        <Button x:Name="nextButton" Grid.Row="1" Grid.Column="2" Click="nextButton_Click">Next</Button>

        <!-- CardBoard -->
        <local:CardBoard x:Name="cardBoard" Grid.Row="1" Grid.Column="1"></local:CardBoard>
        
    </Grid>
</Window>
